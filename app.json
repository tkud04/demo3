{
  "expo": {
    "name": "Tembo",
    "description": "Daily sales/inventory app for Tecno Mobile",
    "slug": "tembo-app",
    "privacy": "public",
    "platforms": [
      "android",
	  "ios"
    ],
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "cover",
      "backgroundColor": "#80ff80"
    },
    "notification": {
      "icon": "./assets/images/notification.png"
    },
    "updates": {
      "enabled": true
    },
    "assetBundlePatterns": [
      "assets/**/*"
    ],
    "android": {
      "package": "com.tecno.tembo",
      "permissions": [
        "NOTIFICATIONS"
      ]
    }
  }
}
